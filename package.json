{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build:remix": "remix build",
    "dev:remix": "remix watch",
    "postinstall": "npm run generate && remix setup cloudflare-workers",
    "build-worker": "cross-env NODE_ENV=production node worker.build.js",
    "dev-worker": "node worker.build.js ",
    "build:css": "cross-env NODE_ENV=production tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/app.css --minify",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/app.css --watch",
    "dev": "concurrently \"npm:dev:*\" \"npm:start\"",
    "build": "concurrently \"npm:build:*\"",
    "lint": "eslint --ext \".js,.jsx,.ts,.tsx\" --ignore-path .gitignore .",
    "start": "miniflare --build-command \"npm run dev-worker\" --watch",
    "generate": "PRISMA_CLIENT_ENGINE_TYPE='dataproxy' prisma generate",
    "seed": "node --require esbuild-register prisma/seed.ts",
    "db:push": "prisma db push",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "build-ci": "npm run migrate:deploy && npm run generate && npm run build",
    "deploy": "npm run build && wrangler publish"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.3",
    "@prisma/client": "^3.8.1",
    "@remix-run/cloudflare-workers": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "dotenv": "^10.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-toast": "^2.2.0",
    "react-icons": "^4.3.1",
    "remix": "^1.1.3",
    "remix-seo": "^0.1.0",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.3.1",
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "@remix-run/dev": "^1.1.3",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "daisyui": "^1.25.4",
    "esbuild": "0.14.14",
    "esbuild-plugin-alias": "^0.2.1",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-remix": "^0.0.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.2",
    "miniflare": "2.2.0",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "prisma": "^3.8.1",
    "tailwindcss": "^3.0.17",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "husky": {
    "hooks": {
      "pre-commit": "CI=1 lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|mjs|ts|tsx|css|md|yml)": [
      "prettier --write"
    ]
  },
  "main": "dist/worker.js"
}
